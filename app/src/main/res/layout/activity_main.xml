<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="324dp"
        android:layout_height="89dp"
        android:text="Message from Communify Team: Thanks for joining Communify, enjoy! "
        android:textSize="20sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/inboxTitle"
        android:layout_width="169dp"
        android:layout_height="75dp"
        android:background="#FF6495ED"
        android:text=" Inbox"
        android:textSize="60sp"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/yourMessages"
        android:layout_width="276dp"
        android:layout_height="44dp"
        android:text=" Current Messages(2)"
        android:textSize="26sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="182dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="324dp"
        android:layout_height="89dp"
        android:text="Message from Johnny: Hey Welcome to Communify, I am here to help if you need anything!!"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="236dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/message input"
        android:layout_width="321dp"
        android:layout_height="95dp"
        android:hint="Name:                                             Message:"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF6495ED"
        android:text="Send"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="584dp" />

</androidx.constraintlayout.widget.ConstraintLayout>